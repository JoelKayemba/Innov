<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:InnovAPK.Views"
             x:Class="InnovAPK.Views.TransitionPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="50" >
            <Label Text="Qui êtes vous?" HorizontalOptions="Center" VerticalOptions="Start" FontSize="24" Margin="0,0,0,20"/>
            <StackLayout>
                <RadioButton Content="Innovateur" GroupName="UserType" x:Name="innovateurRadioButton"/>
                <RadioButton Content="Entreprise" GroupName="UserType" x:Name="entrepriseRadioButton"/>
                <RadioButton Content="ONG" GroupName="UserType" x:Name="ongRadioButton"/>
                <RadioButton Content="Investisseur" GroupName="UserType" x:Name="investisseurRadioButton"/>
            </StackLayout>
            <Button Text="S'INSCRIRE" BackgroundColor="#5D4242" TextColor="White" CornerRadius="20" Margin="0,20,0,0" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>