<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InnovAPK.PageInscription">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Inscription" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,0" />

            <Entry Placeholder="Nom" Margin="0,10,0,0" />
            <Entry Placeholder="Prénom" Margin="0,10,0,0" />
            <Entry Placeholder="Age" Margin="0,10,0,0" />
            <Entry Placeholder="Profession" Margin="0,10,0,0" />
            <Entry Placeholder="Nationalité" Margin="0,10,0,0" />
            <Entry Placeholder="Adresse" Margin="0,10,0,0" />
            <Entry Placeholder="Adresse e-mail" Margin="0,10,0,0" />
            <Entry Placeholder="Nom d'utilisateur" Margin="0,10,0,0" />
            <Entry Placeholder="Mot de passe" Margin="0,10,0,0" IsPassword="True" />

            <Button Text="S'inscrire" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
