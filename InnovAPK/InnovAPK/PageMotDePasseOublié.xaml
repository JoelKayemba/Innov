<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InnovAPK.PageMotDePasseOublié">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Mot de passe oublié" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,0" />

            <Entry Placeholder="Adresse e-mail" Margin="0,10,0,0" />

            <Button Text="Envoyer le code de récupération"  HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>